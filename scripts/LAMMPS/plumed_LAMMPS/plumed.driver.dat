H: GROUP ATOMS=$HLIST

N: GROUP ATOMS=$NLIST

Li: GROUP ATOMS=$LILIST

ghosta: FIXEDATOM AT=0,0,15

dis_GH: ZDISTANCES GROUPA=ghosta GROUPB=H MAX={BETA=0.5}
uwall1: UPPER_WALLS ARG=dis_GH.max AT=12.0 KAPPA=2000.0 EXP=2
dis_GN: ZDISTANCES GROUPA=ghosta GROUPB=N MAX={BETA=0.5}
uwall2: UPPER_WALLS ARG=dis_GN.max AT=12.0 KAPPA=2000.0 EXP=2

PRINT ARG=* FILE=COLVAR STRIDE=1000
FLUSH STRIDE=4000
